
@{
    ViewBag.Title = "display";
}

<h2>display</h2>
<div>
    <img id="map" src="~/export-map-share.png" alt="map2"  hidden="hidden"/>
    <canvas id="myCanvas" width="500" height="500"
            style="border:1px solid black;"></canvas>
    <h2>Map Values</h2>
    <table>
        <tr>
            <td>Lon:  </td>
            <td><p type="text" id="lon" size="5"></p></td>
        </tr>
        <tr>
            <td>Lat:  </td>
            <td><p type="text" id="lat" size="5"></p></td>
        </tr>
    </table>

</div>

<script>
    window.onload = function () {
        var canvas = document.getElementById("myCanvas");
        var img = document.getElementById("map");
        canvas.style.position = "absolute";
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        var ctx = canvas.getContext("2d");
        ctx.translate(0, 0);
        ctx.drawImage(img, 0, 0, img.width, img.height, 0, 0, canvas.width, canvas.height);
        
    };
</script>
<script>
    var IntervalTime = @Session["time"]* 1000
    var prevLon = null;
    var prevLat = null;
    myTimer = (function () {
        $.post("@Url.Action("GetValue")").done(function (xml) {
            var xmlDoc = $.parseXML( xml ),
            $xml = $( xmlDoc ),
            lonValue = $xml.find("Lon").text();
            latValue = $xml.find("Lat").text();
            var lon = parseFloat(lonValue)
            var lat = parseFloat(latValue)
            lon = (lon + 180) * (window.innerWidth / 360); ///////////////////////////////////TODO
            lat = (lat + 90) * (window.innerHeight / 180);
            if (prevLat == null || prevLon == null) {
                drawPoint(lon, lat);
            } else {
                drawLine(prevLon, prevLat, lon, lat);
            }
            alert("Lon"+lon+"Lat"+lat);
            prevLon = lon;
            prevLat = lat;
           
        });
    });
    if (IntervalTime != 0) {
        setInterval(myTimer, IntervalTime);
        myTimer();
    } else {
        alert(IntervalTime);
        myTimer();
    }
</script>
<script>
    drawPoint = (function (x,y) {
        var canvas = document.getElementById("myCanvas");
        var img = document.getElementById("map");
        canvas.style.position = "absolute";
        canvas.style.left = img.offsetLeft;
        canvas.style.top = img.offsetTop;
        var ctx = canvas.getContext("2d");
        ctx.fillStyle = "red";
        ctx.beginPath();
        ctx.arc(x, y, 10, 0, 2 * Math.PI);
        ctx.closePath();
        ctx.fill();
    });
</script>
<script>
    drawLine = (function (prevX,prevY,x, y) {
        var canvas = document.getElementById("myCanvas");
        var img = document.getElementById("map");
        canvas.style.position = "absolute";
        canvas.style.left = img.offsetLeft;
        canvas.style.top = img.offsetTop;
        var ctx = canvas.getContext("2d");
        ctx.strokeStyle = "red";
        ctx.beginPath();
        ctx.moveTo(prevX, prevY);
        ctx.lineTo(x, y);
        ctx.stroke();
        ctx.closePath();
    });
</script>

